      "value": "<p><span class=\"math inline\">\\(\\prob(\\overline{A} \\mid B)\\)</span> ;</p>\n"
    },
    {
      "type": "reponse",
      "value": "<p><span class=\"math inline\">\\(\\prob(\\overline{A} \\mid B) =\n0.5\\)</span></p>\n"
    },
    {
      "type": "question",
      "value": "<p><span class=\"math inline\">\\(\\prob({A} \\mid \\overline{B})\\)</span>\n;</p>\n"
